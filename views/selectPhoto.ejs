<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">
    <title><%=title%></title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-theme.min.css">
    <link rel='stylesheet' type="text/css" href='/stylesheets/selectphoto.css' />
    <script src="/javascripts/bootstrap.min.js"></script>
</head>
<script type="text/javascript">
    function handleFiles() {
        var selector = document.getElementById('fileElem');
        if(selector.files && selector.files[0]){
            var oFReader = new FileReader();
            oFReader.readAsDataURL(selector.files[0]);

            oFReader.onload = function (oFREvent) {
                document.getElementById("photo").src = oFREvent.target.result;
            };
//            document.getElementById('hfilename').value = selector.files[0].path;
        }
    }

</script>

<body>
    <div id="div-body">
        <div id="div-head" class="float:right;">
            <h2 class="text-align:center;">Photo Upload</h2>
        </div>
        <br>
        <div id="div-main">
            <form id="photoForm" action="/uploadphoto" method="post" enctype="multipart/form-data">
                <div id="div-photo">
                        <img id="photo" src="" width="150" height="150" >
                    <input type="file" name="fileElem" id="fileElem" accept="image/*" capture="camera" onchange="handleFiles(this.files)">
                    <br>
                    <br>

                    <img id="photoupload" src="/images/uploadphoto.png" onclick="document.getElementById('photoForm').submit();">
                </div>
            </form>
        </div>
    </div>
    <div id="div-foot">
        <button id="btnProfile" onclick="location.href='/profile';"></button>
        <button id="btnReport" onclick="location.href='';"></button>
        <a href="tel:703-987-6037"><button id="btnPhoneCall"></button></a>

    </div>

</body>
</html>