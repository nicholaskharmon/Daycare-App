<!DOCTYPE html>
<html>
<head>
    <title>Sunshine and Sprout Daycare</title>
    <link rel='stylesheet' type="text/css" href='/stylesheets/calendar.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="/stylesheets/jquery-ui-1.12.1.css">

</head>
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/jquery-1.11.0.min.js"></script>
<script src="/javascripts/jquery-ui-1.12.1.js"></script>

<script type="text/javascript">

    var socket = io.connect("http://192.168.4.148:8080");
    var nm = '<%=nname%>';
    var grd = '<%=grade%>';
    socket.emit('joinroom',{room:'map', nickname:nm, grade: grd});

    socket.on('notify', function (data) {
        $('#msg').text(data.msg + " is on way.");
        $('#notify').attr({'style':'display:block;background-color:#eaee9a'});
        socket.emit('location', data);
    });

    var smonths = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nob','Dec'];

    $(document).ready(function() {

        var onmywayDown = false;

        $("#word").width($(document).width()-200);

        function onmyway(){
            if (!onmywayDown){
                onmywayDown = true;
                $('#btnOnMyWay').attr({'style': 'background-image : url("/images/myway1.png")'})
            }else{
                onmywayDown = false;
                $('#btnOnMyWay').attr({'style': 'background-image  : url("/images/myway.png")'})
            }

            socket.emit('notify', { msg: nm});
            location.href="/map";
            return true;
        }

        function hide(){
            $('#notify').attr({'style':'display:none'});
        }

        var currentmonth = new Date();
        var cc = new Date();

        function datesinMonth(vdate){
            var first = new Date(vdate.getFullYear(), vdate.getMonth(), 1, 0, 0, 0, 0);
            var next =  new Date(vdate.getFullYear(), vdate.getMonth(), 1, 0, 0, 0, 0);
            next.setMonth(next.getMonth()+1);

            var diff = (next - first)/ 24 / 3600 / 1000;
            return diff ;
        }

        function loadCalendar(vdate){
            var year = vdate.getFullYear();
            var month = vdate.getMonth();
            var today = vdate.getDate();

            var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
            var smonth = months[month];

            $("#smonth").html(year + "  " + smonth);

            var first = new Date(year, month, 1, 0, 0, 0, 0);
            var firstday = first.getDay();

            if (firstday > 0) {
                first.setDate(-firstday+1);
            }

            var days = datesinMonth(vdate);
            var cells = days + firstday;
//            alert(cells);
            var weeks = 5;
            if (cells % 7 > 0){
                weeks = (cells-cells % 7)/7 + 1;
            }else{
                weeks = cells / 7;
            }
            cells = weeks * 7;
            $(".days").empty();
            for (i = 0; i < cells; i++) {
                var date = first.getDate();
                var id = (first.getMonth()+1) + '-' + first.getDate();

                if(cc.toDateString() == first.toDateString()){
                    $(".days").append('<li id="today">' + date + "</li>");
                }else if(i < firstday || i >= (firstday + days)) {
                    $(".days").append('<li class="prevday"' + ' id="'+ id + '">' + date + "</li>");
                }else{
                    $(".days").append('<li id="' + id + '">' + date + "</li>");
                }
                first.setDate(date + 1);
            }
            $("#today").attr({"style" : "padding:0px 5px;background: #5193bf; color: white !important"});
            $(".prevday").attr({"style" : "color:#8db4ce"});

            if(weeks == 5){
                $('#div-list').attr({"style" : "padding-top:330px"});
            }else{
                $('#div-list').attr({"style" : "padding-top:350px"});
            }
        }

        function loadEvent(vdate){
            var year = vdate.getFullYear();
            var month = vdate.getMonth();

            var first = new Date(year, month, 1, 0, 0, 0, 0);
            var firstday = first.getDay();

            if (firstday > 0) {
                first.setDate(-firstday+1);
            }

            var days = datesinMonth(vdate);
            var cells = days + firstday;

            if (cells * 7 > 0){
                cells = ((cells - cells % 7)/7 + 1) * 7;
            }

            var lastday = new Date(first);
            lastday.setDate(lastday.getDate() + cells);

            var sfirst = first.getFullYear() + '-' + (first.getMonth()+1) + '-' + first.getDate();
            var slast = lastday.getFullYear() + '-' + (lastday.getMonth()+1) + '-' + lastday.getDate();

            var surl = "/get-event?firstday=" + sfirst + "&lastday="+slast;

            $(".event-list").empty();

            $.ajax({
                url : surl,
                dataType:"JSON", // option
                success : function(data) {
                    for(i=0; i<data.length - 1;i++){
                        var flag = 0;
                        var stime = data[i].mtime;
                        var sdate = data[i].mdate;
                        var scont = data[i].event;
                        var snote = data[i].note;
                        var sd = "";

//                        var contents = "";
                        if( sdate != undefined) {
                            var ss = new Date(sdate);
                            if (ss.getMonth() != month) flag = 1;
                            sd = (ss.getMonth() + 1) + '-' + ss.getDate();
                        }

                        if( stime != undefined) {
                            if (stime == '00:00:00') stime = 'All Day';
                        }

                        if(scont == undefined) scont = "";
                        if(snote == undefined) snote = "";

                        add_event(sdate, stime, scont, snote, flag)
                        $('#'+sd).attr({'style': 'background-color:#8db4ce;color:white;padding:0px 5px;'})

                    }
                },
                error : function(xhr, status, error) {
                    alert("error");
                }
            });
        }

        $(window).load(function () {
            loadCalendar(currentmonth);
            loadEvent(currentmonth);
        });

        $(".prev").click(function(){
            currentmonth.setMonth(currentmonth.getMonth() - 1);
            loadCalendar(currentmonth);
            loadEvent(currentmonth);
        })

        $(".next").click(function(){
            currentmonth.setMonth(currentmonth.getMonth() + 1);
            loadCalendar(currentmonth);
            loadEvent(currentmonth);
        })

        function add_event(sdate, stime, scont, snote, flag){
            var shortMonth = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
            var sday = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
            var ss = sdate.split('-');
            var nn = new Date(sdate);
            var day = nn.getDay();
            var dd = nn.getDate();
            var yy = ss[0], mm = ss[1]*1 - 1;
            var smm = shortMonth[mm];
            var sst = sday[day] + " " + stime;
            var sdd = '<span style="font-size:18px">' + dd +'</span>';
            if (flag ) sdd = '<span style="font-size:18px">' + smm + ' ' + dd + '</span>';
//            if (flag ) sdd = '<span style="font-size:12px">' + smm +'</span>' + '<br>' + sdd ;

            var row = '<tr class="list" style="text-align: center">' +
                    '<td class="cell" style="width:80px;">'+ sdd + '</td>' +
                    '<td class="cell" colspan="2" style="font-size:12px">' +
                    '<span style="font-size:16px">' + scont +'</span><br>' +
                    '<span style="font-size:12px">' + sst +'</span>' +
                    '</td>' +
                    '</tr>';
            $(".event-list").append(row);
        }
        // Error
        var error_dialog = $( "#error-dialog" ).dialog({
            autoOpen: false,
            height: 200,
            width: 300,
            modal: true,
            buttons: {
                "Close": function(){ error_dialog.dialog( "close" );}
            },
            close: function() {
                error_form[0].reset();
                //food_Fields.removeClass( "ui-state-error" );
            }
        });

        var error_form = error_dialog.find( "form" ).on( "submit", function( event ) {
            event.preventDefault();
        });
        // when click <Search>
        $("#btnsearch").click(function(){
            var key = $("#word").val();
            if (key == ""){
                error_dialog.dialog( "open" );
                return;
            }

            $.ajax({
                url : "/search-event?key=" + key,
                dataType:"JSON", // option
                success : function(data) {
                    console.log(data);
                    $(".event-list").empty();
                    for(var i=0; i < data.length; i++){
                        var flag = 1;
                        var stime = data[i].mtime;
                        var sdate = data[i].mdate;
                        var scont = data[i].event;
                        var snote = data[i].note;
                        var sd = "";

//                        var contents = "";
                        if( sdate != undefined) {
                            var ss = new Date(sdate);
//                            if (ss.getMonth() != month) flag = 1;
                            sd = (ss.getMonth() + 1) + '-' + ss.getDate();
                        }

                        if( stime != undefined) {
                            if (stime == '00:00:00') stime = 'All Day';
                        }

                        if(scont == undefined) scont = "";
                        if(snote == undefined) snote = "";

                        add_event(sdate, stime, scont, snote, flag)
                        //$('#'+sd).attr({'style': 'background-color:#8db4ce;color:white;padding:0px 5px;'})
                    }
                },
                error : function(xhr, status, error) {
                    alert("error");
                }
            });
        })

    });
</script>

<body >
