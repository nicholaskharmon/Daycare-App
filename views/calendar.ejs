    var row_even = true;
    var smonths = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nob','Dec'];

    $(document).ready(function() {

        var onmywayDown = false;
        $("#word").width($("#search").width()-40);

        function onmyway(){
            if (!onmywayDown){
                onmywayDown = true;
                $('#btnOnMyWay').attr({'style': 'background-image : url("/images/myway1.png")'})
            }else{
