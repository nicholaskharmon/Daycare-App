                </ul>
            </div>

            <ul class="weekdays">
                <li>Sun</li>
                <li>Mon</li>
                <li>Tue</li>
                <li>Wed</li>
                <li>Thu</li>
                <li>Fri</li>
                <li>Sat</li>
            </ul>

            <ul class="days"></ul>
        </div>
    </div>

    <div id="div-list">
        <!--<ul class="event-list"></ul>-->
        <!--<form action="/save-event" method="post" style="width:100%">-->
            <!--<br><br>-->
            <div style="width:100%; height:50px;">
                <div id="div-date">
                    <p id="dmsg">&nbsp;Date(Pick date above)&nbsp;</p>
                    <input name="edate" id="edate" type="text" readonly><br>
                </div>
                <div id="div-time">
                    <p  id="tmsg">&nbsp;Time&nbsp;&nbsp;</p>
